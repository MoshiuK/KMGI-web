# Vimeo to Roku SDK Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# VIMEO CONFIGURATION
# ===========================================

# Required: Your Vimeo API access token
# Get one at: https://developer.vimeo.com/apps
VIMEO_ACCESS_TOKEN=your_vimeo_access_token_here

# Optional: Your Vimeo app credentials (for OAuth flows)
VIMEO_CLIENT_ID=
VIMEO_CLIENT_SECRET=

# Optional: Specific Vimeo user ID (leave empty to use authenticated user)
VIMEO_USER_ID=

# Optional: Sync only from a specific folder/project
VIMEO_FOLDER_ID=

# Optional: Sync only from a specific album/showcase
VIMEO_ALBUM_ID=

# ===========================================
# ROKU CONFIGURATION
# ===========================================

# Required: Your Roku channel provider name
ROKU_PROVIDER_NAME=Your Channel Name

# Optional: Roku channel ID
ROKU_CHANNEL_ID=

# Feed language (ISO 639-1 code)
ROKU_LANGUAGE=en

# Where to save the generated feed
ROKU_FEED_OUTPUT_PATH=./roku_feed.json

# Default genre for videos
ROKU_DEFAULT_GENRE=Entertainment

# Content rating
ROKU_RATING_SYSTEM=USA_TV
ROKU_DEFAULT_RATING=TV-G

# Optional: S3 bucket for hosting the feed
ROKU_S3_BUCKET=
ROKU_S3_KEY=roku-feed.json

# Optional: Webhook URL for notifications
ROKU_WEBHOOK_URL=

# ===========================================
# SYNC CONFIGURATION
# ===========================================

# Include private videos (true/false)
SYNC_INCLUDE_PRIVATE=false

# Minimum video duration in seconds
SYNC_MIN_DURATION=0

# Maximum video duration in seconds (leave empty for no limit)
SYNC_MAX_DURATION=

# Comma-separated list of tags to include (empty = include all)
SYNC_INCLUDE_TAGS=

# Comma-separated list of tags to exclude
SYNC_EXCLUDE_TAGS=

# Videos shorter than this (seconds) are "short form"
SYNC_SHORT_FORM_MAX_DURATION=900

# Enable caching for incremental syncs
SYNC_CACHE_ENABLED=true
SYNC_CACHE_PATH=./.vimeo_roku_cache

# Logging
SYNC_LOG_LEVEL=INFO
SYNC_LOG_FILE=

# ===========================================
# AWS CONFIGURATION (for S3 uploads)
# ===========================================

# AWS credentials (if not using IAM roles or AWS CLI config)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
